<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TraCuuBenhNhanActivity"
    android:orientation="vertical"
    android:id="@+id/manhinhTXS">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#006466">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_activity"
            android:background="#006466">
        </ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý thông tin bệnh nhân"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_slab"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal|center_vertical"/>
    </FrameLayout>

    //khung 1
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        //họ và tên
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Họ tên"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>
            <EditText
                android:id="@+id/hoten"
                android:layout_width="185dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_text_background"
                android:textSize="15dp" />
        </LinearLayout>

        //năm sinh
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="CMND/CCCD"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>
            <EditText
                android:id="@+id/cmnd"
                android:layout_width="195dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_text_background"
                android:textSize="15dp"
                android:inputType="number"/>
        </LinearLayout>
    </LinearLayout>

    //khung 2
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        // CMND/CCCD
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"/>
        </LinearLayout>

        //Dia chi
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnDatLaiTXS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:icon="@drawable/replay"
            android:text="Đặt lại"
            android:textSize="15dp"
            app:iconTint="@color/black" />
        <Button
            android:id="@+id/btnThemBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#1B8B8B"
            android:textColor="@color/white"
            android:text="Thêm"
            android:textSize="15dp"
            app:iconTint="@color/black"
            android:layout_marginLeft="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dsbenhnhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
</LinearLayout>